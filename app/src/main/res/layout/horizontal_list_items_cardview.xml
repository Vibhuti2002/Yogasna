<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="143dp"
    android:layout_height="200dp"
    android:layout_marginHorizontal="3dp"
    android:background="#F4F4F4"
    android:padding="20dp"
    app:cardCornerRadius="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardConstraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/cardrecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1.5dp"
        app:layout_constraintTop_toTopOf="@id/cardConstraint"
        app:layout_constraintBottom_toBottomOf="@id/cardConstraint"
        app:layout_constraintStart_toStartOf="@id/cardConstraint"
        app:layout_constraintEnd_toEndOf="@id/cardConstraint"/>


    <TextView
        android:id="@+id/headingHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:foregroundGravity="bottom"
        android:gravity="center"
        android:text="@string/daily_warm_up"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/cardrecycler"
        app:layout_constraintEnd_toEndOf="@id/cardrecycler"
        app:layout_constraintBottom_toBottomOf="@id/cardrecycler"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
